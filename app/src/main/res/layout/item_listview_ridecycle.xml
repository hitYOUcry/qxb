<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ridecyclelinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_black"
    android:minHeight="@dimen/ridecycle_listItem_height"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="214"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>

        <ImageView
            android:id="@+id/imageView_ridecyclePicture"
            android:layout_width="0dp"
            android:layout_height="@dimen/ridecycle_mainInfo_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="80"
            android:scaleType="centerInside"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/ridecycle_mainInfo_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="248"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_ridecycle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:ellipsize="end"
                android:gravity="top"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"/>

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/lit_white"
                android:textSize="@dimen/text_size_xx_small"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
</LinearLayout>
