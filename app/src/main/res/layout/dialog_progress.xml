<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_242424_fade50">

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:background="@color/black_242424_fade95">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white_fade90"
            android:textSize="@dimen/text_size_48px"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_title"
            android:layout_marginTop="15dp"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:progressDrawable="@drawable/xml_seekbar_bar"
            android:thumb="@drawable/xml_seekbar_thumb"/>

        <TextView
            android:id="@+id/textView_progressHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/seekBar"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white_fade75"
            android:textSize="@dimen/text_size_42px"/>
    </RelativeLayout>
</RelativeLayout>