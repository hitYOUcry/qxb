<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#191919">
    <LinearLayout
        android:id="@+id/ll_tab_equipment"
        android:layout_marginLeft="88dp"
        android:layout_alignParentLeft="true"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tab_equipment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="@string/equipment"
            android:textSize="@dimen/text_size_48px"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/tv_tab_equipment_bottom_image"
            android:src="@drawable/ic_mine_my_favorite_tab_bottom_image"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tab_ride_cycle"
        android:layout_marginRight="88dp"
        android:layout_alignParentRight="true"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tab_ride_cycle"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="@string/riding_circle"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/tv_tab_ride_cycle_bottom_image"
            android:src="@drawable/ic_mine_my_favorite_tab_bottom_image"
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>