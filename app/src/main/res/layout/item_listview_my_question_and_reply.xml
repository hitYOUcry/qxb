<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:round="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="80dp"
                android:orientation="vertical"
    android:background="@color/theme_black">

    <FrameLayout
        android:id="@+id/fl_head_portrait"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_communicate_head_bg">

        <com.qixingbang.qxb.activity.mine.clipHeadPortrait.RoundImageView
            android:id="@+id/iv_head_portrait"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            round:civ_border_width="1dp"
            round:civ_border_color="@color/black_242424"
            android:background="@drawable/ic_communicate_head_protrait"/>
    </FrameLayout>
    
    <TextView
        android:id="@+id/tv_reply_count"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_common_info_hint"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/text_size_18px">
    </TextView>
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="130dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fl_head_portrait"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/text_size_36px"/>

    <TextView
        android:id="@id/tv_date"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_below="@id/tv_nickname"
        android:layout_toRightOf="@id/fl_head_portrait"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/text_size_24px"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="269dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_date"
        android:layout_toRightOf="@id/fl_head_portrait"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:lines="2"
        android:lineSpacingExtra="2dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_36px"/>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_thumb_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24px"
            android:layout_gravity="center_vertical"
            android:text="12"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_communicate_note"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_content"
        android:layout_toRightOf="@id/fl_head_portrait"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:id="@+id/iv_third"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
</RelativeLayout>